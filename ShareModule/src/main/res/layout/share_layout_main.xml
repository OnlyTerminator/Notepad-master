<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/share_image_width"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/share_rl_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/share_image_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            tools:src="@drawable/moji_cloud" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/share_rl_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/share_rl_top">

        <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:background="#66000000"
        android:visibility="visible"/>

        <ImageView
            android:id="@+id/share_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            tools:src="@drawable/moji_cloud" />

        <include layout="@layout/share_bottom_qr" />
    </RelativeLayout>


</RelativeLayout>